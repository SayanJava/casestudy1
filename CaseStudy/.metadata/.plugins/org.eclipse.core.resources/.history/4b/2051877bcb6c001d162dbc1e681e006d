package com.tweetapp;

import java.util.Scanner;

public class LoggedInUser {

	public static void main(String[] args) {
		
		while(true) {
			System.out.println("1.Post a tweet 2.View all your tweets 3.View all tweets"
					+ " 4.View all users 5.Reset password 6.Logout");
			System.out.println("Enter your choice");
			Scanner sc=new Scanner(System.in);
			int ch1=sc.nextInt();
			switch (ch1) { 
		      case 1:
		        System.out.println("Post a tweet");
		        System.out.println("Enter some message");
		        String msg=sc.next();
		        break;
		      case 2:
		        System.out.println("View all your tweets");
		        break;
		      case 3:
		        System.out.println("View all tweets");
		        break;
		      case 4:
			        System.out.println("View all users");
			        break; 
		      case 5:
			        System.out.println("Reset password");
			        break;  
		      case 6:
			        System.out.println("Logout");
			        break;
		        
		      default:
		    	    System.out.println("please choose a valid options");  
		      
		   
			}
			
		}
		

	}

}
