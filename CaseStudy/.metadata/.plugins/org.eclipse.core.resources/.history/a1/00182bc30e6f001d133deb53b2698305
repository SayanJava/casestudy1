package com.Dt.JunitDemo.epo;

import static org.assertj.core.api.Assertions.assertThat;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;

import com.Dt.JunitDemo.entity.Customer;
import com.Dt.JunitDemo.repo.Custrepo;

public class CustRepoTest {
	
	@Autowired
	private Custrepo crepo;
	@Test
	void isPersonExistsById() {
		Customer cust=new Customer(15,"suresh");
		crepo.save(cust);
		
		Boolean acRes=crepo.isCustomerExistsById(15);
		assertThat(acRes).isTrue();
	}

	@BeforeEach
	void setUp() {
		System.out.println("setup is started");
	}
	
	@AfterEach
	void tearDown() {
		System.out.println("Test Over");
		crepo.deleteAll();
	}

