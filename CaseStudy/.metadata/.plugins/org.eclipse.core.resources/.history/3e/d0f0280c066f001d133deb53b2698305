package com.Dt.JunitDemo.repo;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.Dt.JunitDemo.entity.Customer;

public interface Custrepo extends JpaRepository<Customer,Integer> {
	
	
	@Query("SELECT CASE WHEN COUNT(s)>0 THEN TRUE ELSE FALSE END FROM Customer_table s WHERE S.CustId=?1")
	Boolean isCustomerExistsById(Integer id);

}
